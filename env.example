DJANGO_SECRET_KEY=changeme-very-secret

# Set to "prod" for production deployments
ENV=prod
DJANGO_DEBUG=0

# Comma-separated list of allowed hostnames. Use your public domain name.
DJANGO_ALLOWED_HOSTS=155.185.254.28,hub.parametricomparison.unimore.it

# Trusted origins for CSRF protection. Must start with https:// or http://
DJANGO_CSRF_TRUSTED_ORIGINS=http://155.185.254.28,http://hub.parametricomparison.unimore.it

# Redirect HTTP to HTTPS (1 enables redirect)
DJANGO_SECURE_SSL_REDIRECT=1

# PostgreSQL database configuration (replace placeholders with real values)
POSTGRES_DB=postgres_db_name  # placeholder: set the name of your database
POSTGRES_USER=postgres_user   # placeholder: set the database username
POSTGRES_PASSWORD=postgres_password   # placeholder: set the database password
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Disable initial CSV seeding in production
SEED_ON_START=false